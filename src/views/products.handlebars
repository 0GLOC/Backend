<script>
    function reload(){
        location.reload(true)
    }

    function recharge(){
        setTimeout(reload, 1000)
    }

    function fetchDelete(link){
        let productID = parseInt(link.value);
        console.log(productID);

        fetch(`/api/carts/{{realValue}}/products/${productID}`,{
            method: 'DELETE',
            headers:{
                "Content-type": "application/json"
            }
        })
        .then(res => res.json())
        .then(data => console.log(data))

        recharge()
    }
</script>

<script>
    let deleteID = {
        "product": 0,
        "quantity": 1
    }

    function reload(){
        location.reload(true)
    }

    function recharge(){
        setTimeout(reload, 1000)
    }

    function fetchProducts(link){
        deleteID.product = parseInt(link.value);
        console.log(deleteID);

        fetch('/api/carts/{{realValue}}/products',{
            method: 'POST',
            body: JSON.stringify(deleteID),
            headers:{
                "Content-type": "application/json"
            }
        })
        .then(res => res.json())
        .then(data => console.log(data))

        recharge()
    }
    
</script>

<script>
    const cartIcon = document.getElementById('iconCart');
    const wholeCartWindow = document.getElementById('wholeCartDeployed');
    wholeCartWindow.inWindow = 0

    cartIcon.addEventListener('click', () => {
        if(wholeCartWindow.classList.contains('hide'))
        wholeCartWindow.classList.remove('hide')
    })

    cartIcon.addEventListener('mouseleave', () => {
        setTimeout( () => {
            if(wholeCartWindow.inWindow === 0){
                wholeCartWindow.classList.add('hide')
            }
        } ,500)
    })

    wholeCartWindow.addEventListener('mouseover', () => {
        wholeCartWindow.inWindow = 1
    })

    wholeCartWindow.addEventListener('mouseleave', () => {
        wholeCartWindow.inWindow = 0
        wholeCartWindow.classList.add('hide')
    })
</script>

